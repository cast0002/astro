---
import Footer from "../compontents/Footer.astro";
import Navigation from "../compontents/Navigation.astro";
---

<html lang="en">
   <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width" />
      <meta name="generator" content={Astro.generator} />
      <title>Front page</title>
	</head>

	<body>
	
	<header>
		<Navigation />
	</header>
	
  
	 <main>
		<video autoplay muted loop id="background-video">
		   <source src="karruselvideo.mp4" type="video/mp4" />
		</video>
		<div class="big-logo">
		   <img src="biglogo.png" alt="Big Logo" class="big-logo" />
		</div>
		<div class="button-container">
		   <button class="red-button" onclick="window.location.href='tickets.astro'">TICKETS</button>
		   <button class="red-outline-button" onclick="window.location.href='lineup.astro'">LINEUP</button>
		</div>
		<div class="additional-text">Let's meet again</div>
		<div class="additional-text2">27.AUGâ€”29.AUG</div>
	 </main>
	 <footer>
		<Footer />
	 </footer>
</body>

<script>
	const burger = document.querySelector(".burger");
	const nav = document.querySelector("nav");
	const menu = document.querySelector(".menu");
	const links = document.querySelectorAll(".menu li a");

	burger.addEventListener("click", () => {
	   console.log("click");
	   burger.classList.toggle("active");
	   nav.classList.toggle("active");
	});

	links.forEach((link) => {
	   link.addEventListener("click", () => {
		  burger.classList.remove("active");
		  nav.classList.remove("active");
	   });
	});
 </script>

<style>
         /* CSS styles for the navigation menu */
         .logo img {
            width: 80px;
            height: auto;
            top: 0px;
         }

         .logo {
            display: inline-block;
            vertical-align: middle;
            top: 5px;
         }

         nav {
            position: relative;
            z-index: 1;
            display: flex;
            align-items: center;
            justify-content: space-between;
         }

         .menu {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            justify-content: center;
         }

         .menu li:last-child {
            margin-right: 0;
         }

         .menu a {
            display: flex;
            padding: 10px;
            color: rgb(0, 0, 0);
            text-decoration: none;
            transition: color 0.3s;
            text-align: end;
            font-family: "Hekate";
         }

         .menu a:hover {
            text-decoration: none;
            color: black;
         }

         .red-button {
            background-color: #4f0400;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 16px;
         }

         .red-button:hover {
            background-color: darkred;
         }

         .burger {
            width: 30px;
            height: 20px;
            cursor: pointer;
         }

         .burger .line {
            width: 100%;
            height: 2px;
            background-color: rgb(0, 0, 0);
            margin-bottom: 5px;
            transition: 0.2s linear;
         }

         .burger {
            display: none;
         }

         .button-container {
            position: absolute;
            top: 62.5%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: flex;
            justify-content: center;
            align-items: center;
         }

         .red-button,
         .red-outline-button {
            width: 100px;
            height: 40px;
            text-align: center;
            padding: 10px 0;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 16px;
            margin-right: 10px;
         }

         .red-button {
            background-color: #4f0400;
            color: white;
            border: none;
         }

         .red-outline-button {
            background-color: transparent;
            border: 2px solid #4f0400;
            color: #4f0400;
            color: white;
         }

         .red-button:hover {
            background-color: darkred;
         }

         .red-outline-button:hover {
            background-color: rgba(255, 0, 0, 0.1);
         }

         .big-logo {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
         }

         .big-logo img {
            width: 50%;
            height: auto;
         }

         video#background-video {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
         }

         .additional-text {
            font-size: 30px;
            color: #ffffff;
            position: absolute;
            top: 70%;
            left: 50%;
            transform: translateX(-50%);
         }

         .additional-text2 {
            font-size: 28px;
            color: #ffffff;
            position: absolute;
            top: 78%;
            left: 50%;
            transform: translateX(-50%);
         }
    

         @media screen and (max-width: 700px) {
            .big-logo img {
               width: 70%;
            }
         }

         @media screen and (max-width: 550px) {
            .big-logo img {
               width: 100%;
            }
         }
      </style>
 


</html>
	