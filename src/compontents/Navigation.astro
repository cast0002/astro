<!doctype html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Your Title Here</title>
      <style>
         .logo img {
            width: 80px;
            height: auto;
            top: 0px;
         }

         .logo {
            display: inline-block;
            vertical-align: middle;
            top: 5px;
         }

         nav {
            position: relative;
            z-index: 1;
            display: flex;
            align-items: center;
            justify-content: space-between;
         }

         .menu {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            justify-content: center;
         }

         .menu li:last-child {
            margin-right: 0;
         }

         .menu a {
            display: flex;
            padding: 10px;
            color: rgb(0, 0, 0);
            text-decoration: none;
            transition: color 0.3s;
            text-align: end;
         }

         .menu a:hover {
            text-decoration: none;
            color: black;
         }

         .red-button {
            background-color: #4f0400;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 16px;
         }

         .red-button:hover {
            background-color: darkred;
         }

         .burger {
            width: 30px;
            height: 20px;
            cursor: pointer;
         }

         .burger .line {
            width: 100%;
            height: 2px;
            background-color: rgb(0, 0, 0);
            margin-bottom: 5px;
            transition: 0.2s linear;
         }

         .burger {
            display: none;
         }
      </style>
   </head>
   <body>
      <nav>
         <div class="logo">
            <a href="index.astro">
               <img src="karruselmini.png" alt="Logo" />
            </a>
         </div>

         <ul class="menu">
            <li><a href="gallery.astro">GALLERY</a></li>
            <li><a href="lineup.astro">LINEUP</a></li>
            <li><button class="red-button" onclick="window.location.href='tickets.astro'">TICKETS</button></li>
         </ul>

         <div class="burger">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
         </div>
      </nav>

      <script>
         const burger = document.querySelector(".burger");
         const nav = document.querySelector("nav");
         const menu = document.querySelector(".menu");
         const links = document.querySelectorAll(".menu li a");

         burger.addEventListener("click", () => {
            console.log("click");
            burger.classList.toggle("active");
            nav.classList.toggle("active");
         });

         links.forEach((link) => {
            link.addEventListener("click", () => {
               burger.classList.remove("active");
               nav.classList.remove("active");
            });
         });
      </script>
   </body>
</html>
